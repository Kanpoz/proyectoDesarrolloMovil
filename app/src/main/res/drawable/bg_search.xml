<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo -->
    <solid android:color="@android:color/white" />

    <!-- Borde moradito/azul suave (ajusta al color que quieras) -->
    <stroke
        android:width="1dp"
        android:color="#D2D5F5" />

    <!-- Esquinas -->
    <corners android:radius="20dp" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>