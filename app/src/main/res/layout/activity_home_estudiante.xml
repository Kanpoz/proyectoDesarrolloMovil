<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHome"
    android:background="@color/background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ TÃ­tulo superior -->
    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bienvenido(a), Usuario"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp" />

    <!-- ðŸ”¹ Imagen de perfil -->
    <ImageView
        android:id="@+id/imgPerfilHome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        android:src="@drawable/colegio"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvBienvenida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Scroll con botones -->
    <ScrollView
        android:id="@+id/scrollBotones"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/imgPerfilHome"
        app:layout_constraintBottom_toTopOf="@id/tvRolUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor interno para los botones -->
        <LinearLayout
            android:id="@+id/containerBotones"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- ðŸ”¹ BOTONES REALES -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCursos"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Cursos"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginBottom="8dp"
                app:icon="@drawable/ic_curso"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/secondary_light"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAsignaturas"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Asignaturas"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginBottom="8dp"
                app:icon="@drawable/ic_book"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/accent_blue"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotas"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Notas"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginBottom="8dp"
                app:icon="@drawable/ic_grades"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/accent_amber"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAsistencias"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Asistencias"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginBottom="8dp"
                app:icon="@drawable/ic_calendar"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/accent_lime"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendar"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Calendario"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                app:icon="@drawable/ic_calendar"
                app:iconTint="@android:color/white"
                app:backgroundTint="@color/accent_slate"
                app:iconGravity="textStart"
                app:iconPadding="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ Rol del usuario -->
    <TextView
        android:id="@+id/tvRolUsuario"
        android:textSize="15sp"
        android:textColor="@color/text_tertiary"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <!-- BOTTOM NAV FIJO ABAJO -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="50dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
