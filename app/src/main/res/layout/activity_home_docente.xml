<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FF"
    android:padding="16dp"
    android:layout_marginTop="50dp"
    tools:context=".home.HomeDocente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvSaludoDocente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Hola, María González!"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumen de tu actividad académica."
            android:textColor="#555"
            android:layout_marginBottom="12dp" />

        <!-- Tarjetas principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Gestionar Asistencia -->
            <LinearLayout
                android:id="@+id/cardAsistencia"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_lila"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:text="A"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_circle_dark"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestionar Asistencia"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasar lista"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>

            <!-- Calificaciones -->
            <LinearLayout
                android:id="@+id/cardCalificaciones"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_verde"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginStart="12dp">

                <TextView
                    android:text="C"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_circle_dark"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calificaciones"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar notas"
                    android:textSize="12sp"
                    android:textColor="#888" />
            </LinearLayout>
        </LinearLayout>

        <!-- Gráfica o contenedor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asistencia (Registros)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <FrameLayout
            android:id="@+id/containerGrafica"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F7F3FF"
            android:layout_marginBottom="12dp" />

        <!-- Próximas clases -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Próximas Clases"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F3FF"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 - Historia 10° A (Virtual)"
                android:textColor="#333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 - Historia 10° A (Virtual)"
                android:textColor="#333" />
        </LinearLayout>

        <!-- Notificaciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificaciones"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin notificaciones."
            android:textColor="#777" />
    </LinearLayout>



</ScrollView>
