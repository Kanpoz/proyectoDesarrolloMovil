<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F0FB"
    tools:context=".MisCursos">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Curso"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="20dp"
        android:layout_margin="24dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvNombreCurso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10Â° A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvAula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aula 202"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvPeriodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periodo: 2025-1"
                android:textSize="16sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
