<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Foto de perfil (CardView para hacerlo redondo) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_person"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"/>
    </androidx.cardview.widget.CardView>

    <!-- Nombre -->
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        tools:text="Nombre del contacto"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/card_profile"
        app:layout_constraintTop_toTopOf="@id/card_profile"
        app:layout_constraintEnd_toStartOf="@id/txt_unread_count"
        app:layout_constraintBottom_toTopOf="@id/txt_last_message"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Último mensaje -->
    <TextView
        android:id="@+id/txt_last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        tools:text="Último mensaje..."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/card_profile"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintEnd_toStartOf="@id/txt_unread_count"
        app:layout_constraintBottom_toBottomOf="@id/card_profile"/>

    <!-- Badge de mensajes no leídos -->
    <TextView
        android:id="@+id/txt_unread_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        tools:text="3"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/bg_unread_badge"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/txt_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_profile"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
