<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Foto de perfil -->
        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <!-- Nombre + último mensaje -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del contacto"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txt_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Último mensaje..."
                android:textSize="14sp"
                android:textColor="@color/grisSecundario"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Badge de mensajes no leídos -->
        <TextView
            android:id="@+id/txt_unread_count"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:text="3"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_unread_badge"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
