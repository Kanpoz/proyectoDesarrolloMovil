<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FF">

    <LinearLayout
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ENCABEZADO SUPERIOR -->
        <LinearLayout
            android:id="@+id/layoutCursoSpinner"
            android:orientation="horizontal"
            android:padding="14dp"
            android:background="#F2EBFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:src="@drawable/ic_school"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/tvCursoActual"
                    android:text="Curso Actual"
                    android:textColor="#777"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvCursoNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historia 10° A"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:src="@drawable/arrow_down"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

        <!-- CLASE REGISTRADA -->
        <LinearLayout
            android:id="@+id/layoutClaseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:elevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Clase Registrada"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#777"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvClaseRegistrada"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="26/11/2025 - Historia de Roma (12:00)"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <!-- BOTONES DE ACCIONES -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="6dp">

            <Button
                android:id="@+id/btnMarcarPresentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Marcar como Presentes"
                android:textAllCaps="false"
                android:background="#EFE3FF"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpiar Selecciones"
                android:textAllCaps="false"
                android:background="#EFE3FF"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- TITULO -->
        <TextView
            android:text="Registro de Asistencia"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="24dp" />

        <!-- LISTA DE ESTUDIANTES -->
        <FrameLayout
            android:id="@+id/containerEstudiantes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F3FF"
            android:layout_marginBottom="12dp" />

        <!-- BOTÓN GUARDAR -->
        <Button
            android:id="@+id/btnGuardar"
            android:text="GUARDAR ASISTENCIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#7C4DFF"
            android:padding="14dp"
            android:layout_marginTop="40dp" />
    </LinearLayout>
</ScrollView>