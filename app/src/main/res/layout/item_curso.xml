<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCurso"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF">

        <!-- Icono o imagen representativa del curso -->
        <ImageView
            android:id="@+id/imgCurso"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/colegio"
            android:contentDescription="Icono del curso"/>

        <!-- Contenedor de texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nombre del curso -->
            <TextView
                android:id="@+id/tvCursoNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1°A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Cupo actual -->
            <TextView
                android:id="@+id/tvCupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/30 estudiantes"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Botón verde para inscribir -->
        <Button
            android:id="@+id/btnInscribir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inscribir"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>