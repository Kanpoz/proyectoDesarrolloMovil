<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TITULO -->
        <TextView
            android:id="@+id/tvTituloCalificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificaciones"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDescripcionCalificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese las notas para cada categoría. El total se calcula automáticamente."
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="20dp" />

        <!-- SPINNER DE CLASE -->
        <LinearLayout
            android:id="@+id/layoutClaseSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F2EBFF"
            android:padding="14dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvClaseSeleccionada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Seleccione una clase"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_down" />
        </LinearLayout>

        <!-- CONTENEDOR DE TARJETAS -->
        <LinearLayout
            android:id="@+id/containerFilasCalificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- BOTONES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="CANCELAR"
                android:textAllCaps="false"
                android:background="#F2EBFF"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="GUARDAR CALIFICACIONES"
                android:textAllCaps="false"
                android:background="#7C4DFF"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>