<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp">

    <!-- Curso -->
    <TextView
        android:id="@+id/tvCursoNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Ciencias Naturales 11Â° A (11A)"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Profesor -->
    <TextView
        android:id="@+id/tvCursoProfesor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Docente Chill"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Materia -->
    <TextView
        android:id="@+id/tvCursoMateria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Ciencias Naturales"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Acciones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- Acciones -->
        <ImageView
            android:id="@+id/btnVerCurso"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye"
            android:contentDescription="Ver"/>

        <ImageView
            android:id="@+id/btnEditarCurso"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Editar"/>

        <ImageView
            android:id="@+id/btnEliminarCurso"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar"/>
    </LinearLayout>

</LinearLayout>
