    <!-- Secondary is now mapped to the Darker Brand Color for consistency -->
    <color name="secondary">@color/brand_secondary</color>
    <color name="secondary_light">@color/brand_primary</color>
    <color name="secondary_lighter">@color/brand_tertiary</color>
    <color name="secondary_dark">#172554</color>

